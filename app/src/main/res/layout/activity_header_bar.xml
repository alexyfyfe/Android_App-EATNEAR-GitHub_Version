<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_header_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/rectangle_at_the_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:visibility="visible" />

    <Button
        android:id="@+id/headerQuestionMark"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rectangle_at_the_top"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/headerTitle"
        android:layout_toStartOf="@+id/headerTitle"
        android:background="@drawable/menu_question_mark"
        android:gravity="left|start"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:clickable="true"
        android:fontFamily="casual"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:textSize="52sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/headerMenu"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/rectangle_at_the_top"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_margin="3dp"
        android:layout_toEndOf="@+id/headerTitle"
        android:layout_toRightOf="@+id/headerTitle"
        android:background="@drawable/menu_icon_2"
        android:dropDownWidth="200dp"
        android:gravity="right|end"
        android:padding="10dp" />

</RelativeLayout>